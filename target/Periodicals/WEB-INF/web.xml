<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Periodicals</display-name>
    <welcome-file-list>
        <welcome-file>showRegisterInfo</welcome-file>
    </welcome-file-list>

    <servlet>
        <description>Main page</description>
        <servlet-name> MainPageServlet</servlet-name>
        <servlet-class>ua.nure.patsera.periodicals.web.controller.MainPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> MainPageServlet</servlet-name>
        <url-pattern>/mainPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Show Register Info</description>
        <servlet-name>ShowRegisterInfoServlet</servlet-name>
        <servlet-class>ua.nure.patsera.periodicals.web.controller.ShowRegisterInfoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowRegisterInfoServlet</servlet-name>
        <url-pattern>/showRegisterInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>View periodicals</description>
        <servlet-name>ViewPeriodicalsServlet</servlet-name>
        <servlet-class>ua.nure.patsera.periodicals.web.controller.ViewPeriodicalsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewPeriodicalsServlet</servlet-name>
        <url-pattern>/viewPeriodicals</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Delete periodicals</description>
        <servlet-name>DeletePeriodicalsServlet</servlet-name>
        <servlet-class>ua.nure.patsera.periodicals.web.controller.DeletePeriodicalsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeletePeriodicalsServlet</servlet-name>
        <url-pattern>/deletePeriodicals</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Show category</description>
        <servlet-name>ShowCategoryServlet</servlet-name>
        <servlet-class>ua.nure.patsera.periodicals.web.controller.ShowCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowCategoryServlet</servlet-name>
        <url-pattern>/addPeriodic</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Add periodicals</description>
        <servlet-name>AddPeriodicalsServlet</servlet-name>
        <servlet-class>ua.nure.patsera.periodicals.web.controller.AddPeriodicalsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddPeriodicalsServlet</servlet-name>
        <url-pattern>/addPeriodicals</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CheckRoleFilter</filter-name>
        <filter-class>ua.nure.patsera.periodicals.web.controller.filters.CheckRoleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CheckRoleFilter</filter-name>
        <url-pattern>/checkRole</url-pattern>
    </filter-mapping>

<!--    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/periodicals</param-value>
    </context-param>-->


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/periodicals</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>